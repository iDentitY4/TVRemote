<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_tv_ip"
        android:inputType="number"
        android:digits="0123456789."
        android:key="tv_ip"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_ip" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_timeout"
        android:inputType="number"
        android:digits="0123456789"
        android:key="tv_timeout"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_timeout"
        android:summary="@string/pref_summary_timeout"/>

    <SwitchPreference android:title="@string/pref_title_debug"
        android:key="tv_debugmode"
        android:summary="@string/pref_summary_debug"
        android:defaultValue="false"/>

</PreferenceScreen>