<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.sksystems.tvremote.ExpertMode">

    <ListView
        android:id="@+id/listChannels"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/easy_toolbar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/channel" />

    <include
        android:id="@+id/easy_toolbar"
        layout="@layout/easy_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/expert_toolbar" />

    <LinearLayout
        android:id="@+id/expert_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnAspectRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_aspect_ratio_black_24dp"
            android:onClick="aspectRatioBtnClicked"
            android:text="@string/btnAspectRatio"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/btnPip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_picture_in_picture_black_24dp"
            android:onClick="pipBtnClicked"
            android:text="@string/btnPip"
            android:textOff="@string/btnPip"
            android:textOn="@string/btnPip"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
